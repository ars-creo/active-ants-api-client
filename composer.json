{
    "name": "next-sentence/active-ants-api-client",
    "description": "A client for active-ants APIs",
    "license": "MIT",
    "keywords": ["api", "active-ants"],
    "authors": [
        {
            "name": "Petru Binzari",
            "email": "trica.banzai@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "php-http/httplug": "^1.0 || ^2.0",
        "php-http/multipart-stream-builder": "^1.0",
        "php-http/client-common": "^1.0 || ^2.0",
        "php-http/discovery": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "php-http/message-factory": "^1.0",
        "php-http/curl-client": "^2.0",
        "php-http/message": "^1.0",
        "symfony/http-client": "^5.0",
        "nyholm/nsa": "^1.1",
        "nyholm/psr7": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "LWC\\ActiveAnts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LWC\\ActiveAnts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
